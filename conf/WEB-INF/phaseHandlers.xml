<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="paymentHelper" class="com.cronos.onlinereview.phases.PaymentsHelper">
        <property name="managerHelper" ref="managerHelper"/>
    </bean>
    <bean id="checkpointScreeningResultNotification" class="com.cronos.onlinereview.phases.ScreeningResultNotification">
        <property name="emailTemplateName" value="@exttemplatesdir@/checkpoint_screening_results_email_template.txt"/>
        <property name="emailSubject" value="[{0}] {1} Checkpoint Screening Results"/>
        <property name="emailFromAddress" value="@notificationEmailFromAddress@"/>
        <property name="projectLinkTemplate" value="https://www.topcoder.com/challenges/{0,number,#}"/>
        <property name="scorecardLinkTemplate" value="https://software.topcoder.com/review/actions/ViewReview?rid={0,number,#}"/>
        <property name="managerHelper" ref="managerHelper"/>
        <property name="submissionTypeName" value="Checkpoint Submission"/>
        <property name="scorecardTypeName" value="Checkpoint Screening"/>
        <property name="failedScreeningStatusName" value="Failed Checkpoint Screening"/>
    </bean>
    <bean id="screeningResultNotification" class="com.cronos.onlinereview.phases.ScreeningResultNotification">
        <property name="emailTemplateName" value="@exttemplatesdir@/screening_results_email_template.txt"/>
        <property name="emailSubject" value="[{0}] {1} Screening Results"/>
        <property name="emailFromAddress" value="@notificationEmailFromAddress@"/>
        <property name="projectLinkTemplate" value="https://www.topcoder.com/challenges/{0,number,#}"/>
        <property name="scorecardLinkTemplate" value="https://software.topcoder.com/review/actions/ViewScreening?rid={0,number,#}"/>
        <property name="managerHelper" ref="managerHelper"/>
        <property name="submissionTypeName" value="Contest Submission"/>
        <property name="scorecardTypeName" value="Screening"/>
        <property name="failedScreeningStatusName" value="Failed Screening"/>
    </bean>
    <bean id="reviewResultNotification" class="com.cronos.onlinereview.phases.ReviewResultNotification">
        <property name="winnersEmailTemplateName" value="@exttemplatesdir@/winners_email_template.txt"/>
        <property name="winnersEmailSubject" value="[{0}] {1} place "/>
        <property name="winnersEmailFromAddress" value="@notificationEmailFromAddress@"/>
        <property name="managerHelper" ref="managerHelper"/>
    </bean>
</beans>